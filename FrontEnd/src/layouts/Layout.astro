---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Built by varJonathanR" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    line-height: 1.5;
    box-sizing: border-box;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  form {
    display: flex;
  }

  input {
    outline: none;
  }

  button, .auth-btn {
    transition: 0.3s ease;
  }
  
  label {
    padding-block: 6px;
    display: flex;
    align-items: center;
  }

  label,
  button,
  .auth-btn {
    border-radius: 24px;
    padding-inline: 1rem;
    border: 1px solid;
  }

  label {
    width: 100%;
    gap: 10px;
    align-items: center;
  }

  input {
    width: 100%;
    background-color: transparent;
  }

  label  {
    border-color: rgb(107, 114, 128);
  }

  
  hr {
    border: none;
    border-bottom: 1px solid;
    flex: 1;
    border-color: rgb(107, 114, 128);
  }
</style>
