---
interface Props {
  title: string;
  id: string;
  includeUsername?: boolean;
  action: string;
  redirectMessage: string;
  redirectTo: string;
}

const { title, id, includeUsername, action, redirectMessage, redirectTo } = Astro.props;
---

<section>
  <h1 class="text-2xl text-center mb-4">
    {title}
    <a href="/" class="font-semibold">MyUnsplash</a>!
  </h1>
  <form id={id} action="" class="flex-col gap-4 w-full" autocomplete="off">
    {
      includeUsername ? (
        <label for="username">
          <img src="/User.svg" alt="User icon" />
          <input
            type="text"
            id="username"
            name="username"
            placeholder="Username"
            required
          />
        </label>
      ) : (
        ""
      )
    }
    <label for="email">
      <img src="/Email.svg" alt="Email icon" />
      <input
        type="email"
        id="email"
        name="email"
        placeholder="example@example.com"
        required
      />
    </label>
    <label for="password">
      <img src="/Lock.svg" alt="Lock icon" />
      <input type="password" id="password" name="password" placeholder="******" required />
    </label>
    <button
      type="submit"
      class="bg-gray-700 text-white font-semibold rounded-3xl py-2 hover:bg-green-700 w-full"
      >{action}</button
    >
    <div id="errorMessage" class="text-red-700 h-5 mb-3 text-sm flex flex-col"></div>
  </form>
  <p class="text-center mt-2">
    {redirectMessage}
    <a href={redirectTo} class="cursor-pointer text-sky-700 font-semibold"
      >{action === "Join Now" ? "Log In" : "Join Now"}</a
    >
  </p>
</section>

<style>
  form,
  div {
    display: flex;
    align-items: center;
  }

  label {
    padding-block: 6px;
  }
</style>
